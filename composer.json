{
  "name": "netpromotion/tracy-wrapper",
  "description": "Tracy wrapper",
  "license": "MIT",
  "keywords": [
    "debug",
    "helper",
    "Tracy",
    "wrap",
    "wrapper"
  ],
  "authors": [
    {
      "name": "Petr Knap",
      "email": "knap@netpromotion.cz"
    }
  ],
  "config": {
    "platform": {
      "php": "5.4.45",
      "ext-dom": true
    }
  },
  "require": {
    "php": ">=5.4",
    "tracy/tracy": "2.7.*"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.8"
  },
  "scripts": {
    "tests/": [
      "sudo docker run -v $(pwd):/app --rm php:5.4-cli bash -c 'cd /app && php ./vendor/bin/phpunit'"
    ],
    "post-autoload-dump": [
      "@tests/"
    ]
  },
  "autoload": {
    "files": ["src/helpers.php"]
  }
}
